{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}" />
    <link rel="stylesheet" href="{{ asset('css/style.css') }}" />
    <link rel="stylesheet" href="{{ asset('css/courses.css') }}" />
    <!-- Ajoutez d'autres fichiers CSS ici -->
{% endblock %}

{% block body %}
    <section class="page-title-area page-title-bg1">
        <div class="container">
            <div class="page-title-content">
                <h1 title="REGISTER">REGISTER</h1>
            </div>
        </div>
    </section>

    <section class="profile-authentication-area ptb-100">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-6 col-md-12">
                    <div class="login-form">
                        <h2>Register</h2>
                        {% if message is defined %}
                        <h3 style="color: red;">{{ message }}</h3>
                        {% endif %}
                        {{ form_start(form) }}
                        <form>
                            <div class="form-group">
                                <label>Username</label>
                                {{ form_widget(form.username, {'attr': {'type': 'text','class':'form-control','placeholder':'Your username'}}) }}
                            </div>

                            <div class="form-group">
                                <label>Email</label>
                                {{ form_widget(form.emailAddress, {'attr': {'type': 'email','class':'form-control','placeholder':'Your email'}}) }}
                            </div>

                            <div class="form-group">
                                <label>Password</label>
                                {{ form_widget(form.password, {'attr': {'type': 'password','class':'form-control','placeholder':'Your password'}}) }}
                            </div>
                            <div class="form-group">
                                <label>Last Name</label>
                                {{ form_widget(form.lastName, {'attr': {'type': 'texte','class':'form-control','placeholder':'Your last name'}}) }}
                            </div>
                            <div class="form-group">
                                <label>First Name</label>
                                {{ form_widget(form.firstName, {'attr': {'type': 'texte','class':'form-control','placeholder':'Your first name'}}) }}
                            </div>

                            <p class="description">The password should be at least eight characters long. To make it stronger, use upper and lower case letters, numbers, and symbols like ! " ? $ % ^ & )</p>

                            {{ form_widget(form.Register, {'attr': {'type': 'submit'}}) }}
                        </form>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
