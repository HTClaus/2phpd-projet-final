{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}" />
    <link rel="stylesheet" href="{{ asset('css/style.css') }}" />
    <link rel="stylesheet" href="{{ asset('css/boxicons.min.css') }}" />
    <link rel="stylesheet" href="{{ asset('css/flaticon.css') }}" />

    <!-- Ajoutez d'autres fichiers CSS ici -->
{% endblock %}

{% block body %}
    <section class="page-title-area page-title-bg1">
        <div class="container">
            <div class="page-title-content">
                <h1 title="TOURNAMENT">TOURNAMENT</h1>
            </div>
        </div>
    </section>
    {% if players is defined %}
    <section class="stream-schedule-area pt-100 pb-70">
        <div class="container">
            <div class="row">
                {% for player in players %}
                <div class="col-lg-6 col-md-12">
                    <div class="single-stream-schedule-box">
                        <span class="date">{{ player.id }}</span>
                        <div class="content">
                            <h3 align="center">{{ player.lastName }} {{ player.firstName }}</h3><h3 align="right">
                                {% if player.status != "banni" %}
                                    <a href="{{ path('app_manage_players_ban',{'id' : player.id }) }}"><button class="default-btn disabled" style="pointer-events: all; cursor: pointer;">Ban Player</button></a>
                                    <a href="{{ path('app_player_login') }}"><button class="default-btn disabled" style="pointer-events: all; cursor: pointer;">suspend player</button></a>
                                {% else %}
                                    <a href="{{ path('app_manage_players_unban', {'id': player.id }) }}"><button class="default-btn disabled" style="pointer-events: all; cursor: pointer;">UnBan Player</button></a></h3>
                            {% endif %}
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </section>
    {% endif %}
{% endblock %}
